- @page_title = "Descuentos"

= content_for :header do
  %p.buttons=link_to "Ir a Descuentos", :new_tax_rate, :class => 'button green'
  %h2.tax_rates Descuentos

.table
  %table.data
    %thead
      %tr
        %th Nombre
        %th Valor
    %tbody
      - for tax_rate in @tax_rates
        %tr
          %td= link_to tax_rate.name, [:edit, tax_rate]
          %td= tax_rate.rate
